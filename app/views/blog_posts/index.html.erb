<div class="row">
  <div class="col-md-12">
    <% @posts.first(9).each do |post| %>
      <div class="col-md-4 text-center">
        <%= image_tag post[:img], size: "350x200" %>
        <h3><%= link_to post[:title], post[:url], target: '_blank' %></h3>
        <br>
      </div>
    <% end %>
  </div>
</div>
