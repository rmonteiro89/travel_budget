<div class="modal fade" id=<%="editExpenseModal_#{expense.id}"%> tabindex="-1" role="dialog" aria-labelledby="editExpenseModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="editExpenseModalLabel">Edit expense</h4>
      </div>
      <%= form_for expense, url: trip_expense_path(trip_id: trip.id, id: expense.id), method: :patch do |edit_expense_form| %>
        <div class="modal-body">
          <div class="form-group">
            <%= edit_expense_form.label :date %>
            <div class="input-group">
              <div class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></div>
              <%= edit_expense_form.text_field :date, value: l(expense.date), class: "form-control datepicker" %>
            </div>
          </div>
          <div class="form-group">
            <%= edit_expense_form.label :amount %>
            <div class="input-group">
              <div class="input-group-addon">$</div>
              <%= edit_expense_form.text_field :amount, class: "form-control mask-money" %>
            </div>
          </div>
          <div class="form-group">
            <%= edit_expense_form.label :description %>
            <%= edit_expense_form.text_area :description, class: "form-control", rows: 2 %>
          </div>
          <div class="form-group">
            <%= edit_expense_form.label :category %>
            <%= edit_expense_form.collection_select :category_id, current_user.categories, :id, :name, {prompt: 'Select'}, {class: "form-control"} %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= edit_expense_form.submit "Save changes", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
