<div class="row container">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount</th>
          <th>Description</th>
          <th>Category</th>
          <th>Paid To</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% trip.expenses.order(:date).each do |expense| %>
          <tr>
            <td><%= l(expense.date) %></td>
            <td><%= expense.amount.format %></td>
            <td><%= expense.description %></td>
            <td><%= expense.category_name %></td>
            <td>
              <button type="button" class="btn btn-default btn-sm" >
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              </button>
            </td>
            <td>
              <%= link_to '#', class:'btn btn-primary btn-sm', 'data-toggle'=>'modal', 'data-target'=> "#editExpenseModal_#{expense.id}" do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
              <% end %>
              <%= render partial: 'trips/edit_expense_modal', locals: {trip: trip, expense: expense} %>
              <%= link_to trip_expense_path(trip_id: trip.id, id: expense.id), method: :delete, data: {confirm: "Are you sure?"}, class:'btn btn-danger btn-sm' do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
              <% end %>
            </td>
          </tr>
        <% end %>
          <tr>
            <th></th>
            <th>Total Amount</th>
            <th></th>
            <th></th>
            <th>Total Paid To</th>
            <th></th>
          </tr>
          <tr class="warning">
            <td></td>
            <td><%= Money.new(trip.expenses.sum(:amount_cents)).format %></td>
            <td></td>
            <td></td>
            <td>$1,000.99</td>
            <td></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
