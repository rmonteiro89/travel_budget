<%= link_to "#", class: 'btn btn-default', 'data-toggle'=>'modal', 'data-target'=>'#editTripModal' do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
<% end %>

<!-- Modal -->
<div class="modal fade" id="editTripModal" tabindex="-1" role="dialog" aria-labelledby="editTripModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content text-left">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="editTripModalLabel">Edit Trip</h4>
      </div>
      <div class="modal-body">
        <%= form_for trip, url: trip_path(trip), method: :patch do |trip_form| %>
            <div class="row">
              <div class="form-group col-md-12">
                <%= trip_form.label :country %>
                <%= trip_form.text_field :country, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <%= trip_form.label :city %>
                <%= trip_form.text_field :city, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <%= trip_form.label :currency %>
                <%= trip_form.text_field :currency, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <%= trip_form.label :start_date %>
                <%= trip_form.text_field :start_date, class: 'form-control datepicker', id: 'start_date' %>
              </div>
              <div class="form-group col-md-6">
                <%= trip_form.label :end_date %>
                <%= trip_form.text_field :end_date, class: 'form-control datepicker', id: 'end_date' %>
              </div>
            </div>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= trip_form.submit "Save changes", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
